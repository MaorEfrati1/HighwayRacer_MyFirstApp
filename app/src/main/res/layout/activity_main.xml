<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/road_background"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/Main_LinearLay_Abilities"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal">



        <ImageView
            android:id="@+id/ImageView_Abilities_Heart1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            app:srcCompat="@drawable/heart" />

        <ImageView
            android:id="@+id/ImageView_Abilities_Heart2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            app:srcCompat="@drawable/heart" />

        <ImageView
            android:id="@+id/ImageView_Abilities_Heart3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            app:srcCompat="@drawable/heart" />

        <View
            android:id="@+id/View_Abilities"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/Main_LinearLay_Gameplay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="75"
        android:orientation="horizontal">

        <View
            android:id="@+id/View_GameplayView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/ImageView_Gameplay_BlueCar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:rotation="180"
            app:srcCompat="@drawable/blue_car" />

        <ImageView
            android:id="@+id/ImageView_Gameplay_BlueCar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:rotation="180"
            app:srcCompat="@drawable/blue_car" />






    </LinearLayout>

    <LinearLayout
        android:id="@+id/Main_LinearLay_RaceCarMovement"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:orientation="horizontal">

        <View
            android:id="@+id/View_RaceCarMovement_View1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/ImageView_RaceCarMovement_RaceCar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:rotation="-90"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            app:srcCompat="@drawable/race_car" />

        <View
            android:id="@+id/View_RaceCarMovement_View2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/Main_LinearLay_RightLeftBtn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/ImageButton_RightLeftBtn_Left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:rotation="180"
            android:background="?android:attr/selectableItemBackground"
            app:srcCompat="@drawable/arrow" />
        <View
            android:id="@+id/View_RightLeftBtn_View2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />

        <ImageButton
            android:id="@+id/ImageButton_RightLeftBtn_Right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            app:srcCompat="@drawable/arrow" />
    </LinearLayout>



</LinearLayout>